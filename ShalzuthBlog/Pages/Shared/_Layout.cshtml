<!DOCTYPE html>
<html data-bs-theme="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"]</title>
    <meta property="og:url" content="https://shalzuth.com">
    <meta property="og:type" content="website">
    <meta property="og:title" content="@ViewData["Title"]">
    <meta property="og:description" content="@ViewData["Description"]">
    <meta name="description" content="@ViewData["Description"]">
    <meta property="og:image" content="/card.webp">
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="shalzuth.com">
    <meta property="twitter:url" content="https://shalzuth.com">
    <meta name="twitter:title" content="@ViewData["Title"]">
    <meta name="twitter:description" content="@ViewData["Description"]">
    <meta name="twitter:image" content="/card.webp">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/ShalzuthBlog.styles.css" />

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8PC0RLRYX9"></script><script>window.dataLayer = window.dataLayer || []; function gtag() { dataLayer.push(arguments); } gtag('js', new Date());gtag('config', 'G-8PC0RLRYX9');</script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 sticky-top bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Shalzuth's Blog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <!--<li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Index">Blog</a>
                    </li>-->
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/About">About Me</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-muted">
        <section class="p-4">
            <div class="container text-center">
                <div class="row">
                    <div class="col">
                        <h6 class="text-uppercase fw-bold mb-4">Required stuff</h6>
                        <p>&copy; 2024 - shalzuth</p>
                    </div>
                    <div class="col">
                        <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                        <p>shalzuth @@ gmail</p>
                    </div>
                </div>
            </div>
        </section>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
